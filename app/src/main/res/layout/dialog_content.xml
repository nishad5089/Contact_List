<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"

    android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"

    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/dialog_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Name"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="90dp"
        />
    <TextView
        android:id="@+id/dialog_phone_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Phone Numeber"
        android:textColor="@android:color/white"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/dialog_btn_call"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:text="Mobile Call"
        android:layout_gravity="start" />
    <Button
        android:id="@+id/dialog_btn_msg"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_message_black_24dp"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:text="User Messanger"
        android:layout_gravity="start" />

</LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/dialog_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/p1"

        />

</RelativeLayout>